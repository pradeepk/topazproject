#set( $service = $artifactId )
#set( $Svc = "${service.substring(0, 1).toUpperCase()}${service.substring(1)}" )
<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>${pom.parent.artifactId}-webapp</artifactId>
  <packaging>war</packaging>
  <name>${Svc} Webservice Webapp</name>

  <parent>
    <groupId>${groupId}</groupId>
    <artifactId>${artifactId}</artifactId>
    <version>0.1-SNAPSHOT</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>${pom.parent.groupId}</groupId>
      <artifactId>${pom.parent.artifactId}-server</artifactId>
      <version>${pom.parent.version}</version>
    </dependency>
    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>conf-helper</artifactId>
      <version>0.5-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>cas</groupId>
      <artifactId>casclient</artifactId>
      <version>2.1.1</version>
      <type>jar</type>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>dependency-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals><goal>unpack</goal></goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>${pom.parent.groupId}</groupId>
                  <artifactId>${pom.parent.artifactId}-server</artifactId>
                  <version>${pom.parent.version}</version>
                  <type>jar</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/exploded-server-jar</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>xslt-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals><goal>transform</goal></goals>
            <configuration>
              <xslFile>${basedir}/src/main/stylesheets/server-config.xslt</xslFile>
              <srcDir>${project.build.directory}/exploded-server-jar/</srcDir>
              <srcIncludes>deploy.wsdd</srcIncludes>
              <destDir>${project.build.directory}/${project.build.finalName}/WEB-INF/</destDir>
              <fileNameRegex>deploy</fileNameRegex>
              <fileNameReplacement>server-config</fileNameReplacement>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
