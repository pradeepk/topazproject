<pluginMetadata>
  <mojos>

    <mojo>
      <goal>get-artifacts</goal>

      <!-- this element refers to the Ant target we'll invoke -->
      <call>get-artifacts</call>
      <requiresProject>false</requiresProject>

      <description>
        Fetch the list of artifacts
      </description>

      <parameters>
        <!-- List of artifacts separated by "," -->
        <parameter>
          <name>dependencies</name>
          <property>dependencies</property>
          <expression>${dependencies}</expression>
          <required>true</required>
        </parameter>

        <!-- Type of artifact -->
        <parameter>
          <name>type</name>
          <property>type</property>
          <required>true</required>
          <expression>${type}</expression>
          <defaultValue>jar</defaultValue>
        </parameter>

        <!-- Pass the location directory in as Ant task cannot access it -->
        <parameter>
          <name>location</name>
          <property>location</property>
          <required>true</required>
          <expression>${location}</expression>
          <defaultValue>${project.build.directory}</defaultValue>
        </parameter>
      </parameters>
    </mojo>

    <mojo>
      <goal>untar</goal>

      <!-- this element refers to the Ant target we'll invoke -->
      <call>untar</call>
      <requiresProject>false</requiresProject>

      <description>
        Explode a set of artifacts
      </description>

      <parameters>
        <!-- List of artifacts separated by "," -->
        <parameter>
          <name>dependencies</name>
          <property>dependencies</property>
          <expression>${dependencies}</expression>
          <required>true</required>
        </parameter>

        <!-- Type of artifact -->
        <parameter>
          <name>type</name>
          <property>type</property>
          <required>true</required>
          <expression>${type}</expression>
          <defaultValue>tgz</defaultValue>
        </parameter>
        
        <!-- Type of artifact -->
        <parameter>
          <name>compression</name>
          <property>compression</property>
          <required>true</required>
          <expression>${compression}</expression>
          <defaultValue>gzip</defaultValue>
        </parameter>


        <!-- Pass the location directory in as Ant task cannot access it -->
        <parameter>
          <name>location</name>
          <property>location</property>
          <required>true</required>
          <expression>${location}</expression>
          <defaultValue>${project.build.directory}</defaultValue>
        </parameter>
      </parameters>
    </mojo>
  </mojos>
</pluginMetadata>
