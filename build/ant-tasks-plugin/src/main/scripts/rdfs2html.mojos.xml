<pluginMetadata>
  <mojos>
    <mojo>
      <goal>rdfs2html</goal>

      <!-- this element refers to the Ant target we'll invoke -->
      <call>rdfs2html</call>

      <description>
        Convert the RDF/RDFS file to user readable HTML
      </description>

      <parameters>
        <parameter>
          <name>input</name> 
          <property>input</property> 
          <required>true</required> 
          <expression>${input}</expression>
          <type>java.lang.String</type>
          <description>The name of the input file.</description>
        </parameter>

        <parameter>
          <name>output</name> 
          <property>output</property>
          <defaultValue>${output}</defaultValue>
          <type>java.lang.String</type>
          <description>The name of the output file.</description>
        </parameter>

        <parameter>
          <name>sheet</name> 
          <property>sheet</property>
          <required>true</required>
          <defaultValue>${sheet}</defaultValue>
          <type>java.lang.String</type>
          <description>The name of the stylesheet file.</description>
        </parameter>
      </parameters>
    </mojo>
  </mojos>
</pluginMetadata>
