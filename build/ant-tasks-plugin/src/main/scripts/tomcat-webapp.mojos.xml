<pluginMetadata>
  <mojos>

    <mojo>
      <goal>tomcat-webapp-install</goal>

      <!-- this element refers to the Ant target we'll invoke -->
      <call>tomcat-webapp-install</call>
      <requiresProject>true</requiresProject>

      <description>
        Package Mulgara with Tomcat for easy deployment
      </description>

      <parameters>
        <!-- Group Id for the WAR file to pull in -->
        <parameter>
          <name>dependencies</name>
          <property>dependencies</property>
          <required>true</required>
        </parameter>

        <!-- Name of Tomcat location -->
        <parameter>
          <name>tomcatLocation</name>
          <property>tomcatLocation</property>
          <required>true</required>
          <defaultValue>http://www.apache.org/dist/tomcat/tomcat-5/v5.5.16/bin</defaultValue>
        </parameter>

        <!-- Name of Tomcat file -->
        <parameter>
          <name>tomcatFile</name>
          <property>tomcatFile</property>
          <required>true</required>
          <defaultValue>apache-tomcat-5.5.16</defaultValue>
        </parameter>

        <!-- Pass the root directory in as Ant task cannot access it -->
        <parameter>
          <name>root</name>
          <property>root</property>
          <required>true</required>
          <defaultValue>${project.build.directory}</defaultValue>
        </parameter>

        <!-- Pass the location directory in as Ant task cannot access it -->
        <parameter>
          <name>location</name>
          <property>location</property>
          <required>true</required>
          <defaultValue>${project.build.directory}/classes</defaultValue>
        </parameter>
      </parameters>

    </mojo>
  </mojos>
</pluginMetadata>
