<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <artifactId>mulgara-service</artifactId>
  <packaging>war</packaging>
  <name>Mulgara Webservice Webapp</name>

  <parent>
    <groupId>org.topazproject</groupId>
    <artifactId>topazproject-libs</artifactId>
    <version>0.5-SNAPSHOT</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.mulgara</groupId>
      <artifactId>mulgara-lite</artifactId>
      <version>1.0.1-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>org.mulgara</groupId>
      <artifactId>mulgara</artifactId>
    </dependency>

    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.13</version>
      <scope>runtime</scope>
    </dependency>

    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>filter-resolver</artifactId>
    </dependency>

    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>string-compare-resolver</artifactId>
    </dependency>

    <dependency>
      <groupId>commons-configuration</groupId>
      <artifactId>commons-configuration</artifactId>
    </dependency>
    
    <dependency>
      <groupId>javax.servlet</groupId>
      <artifactId>servlet-api</artifactId>
    </dependency>

    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis</artifactId>
    </dependency>
  </dependencies>

  <pluginRepositories>
    <pluginRepository>
      <id>Maven Snapshots</id>
      <url>http://cvs.apache.org/maven-snapshot-repository/</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
        <enabled>false</enabled>
      </releases>
    </pluginRepository>
  </pluginRepositories>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.0-alpha-1-SNAPSHOT</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.mulgara</groupId>
                  <artifactId>mulgara-lite</artifactId>
                </artifactItem>
              </artifactItems>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>process-resources</phase>
            <goals>
              <goal>run</goal>
            </goals>
            <configuration>
              <tasks>
                <property name="webinf"
                    location="${project.build.directory}/${project.build.finalName}/WEB-INF"/>
                  <property name="mulgara-jar"
                      location="${project.build.directory}/dependency/mulgara-lite.jar"/>

                <unjar src="${mulgara-jar}" dest="${webinf}">
                  <patternset>
                    <include name="lib/*.jar"/>
                    <exclude name="lib/*rmi*"/>
                    <exclude name="lib/*beep*"/>
                    <exclude name="lib/*axis*"/>
                    <exclude name="lib/dtd-base*"/>
                    <exclude name="lib/log4j*"/>
                    <exclude name="lib/commons-logging*"/>
                    <exclude name="lib/javax.servlet*"/>
                    <exclude name="lib/*jetty*"/>
                  </patternset>
                </unjar>
                <unjar src="${mulgara-jar}" dest="${webinf}/classes">
                  <patternset>
                    <include name="org/**"/>
                    <include name="com/**"/>
                    <include name="javax/**"/>
                  </patternset>
                </unjar>
              </tasks>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>it-mulgara</id>
      <build>
        <plugins>
          
          <plugin>
            <groupId>org.topazproject.patch.cargo</groupId>
            <artifactId>cargo-maven2-plugin</artifactId>
            <version>0.2</version>
            <configuration>
              <container>
                <containerId>jetty6x</containerId>
                <type>embedded</type>
                <output>${project.build.directory}/jetty.log</output>
                <log>${project.build.directory}/cargo.log</log>
                <dependencies>
                  <dependency>
                    <location>${user.home}/.m2/topaz/container-classes</location>
                  </dependency>
                </dependencies>
              </container>
              <configuration>
                <home>${project.build.directory}/jetty</home>
                <properties>
                  <cargo.servlet.port>9091</cargo.servlet.port>
                  <cargo.logging>high</cargo.logging>
                </properties>
              </configuration>
            </configuration>
          
            <executions>
              <execution>
                <id>jetty-start</id>
                <phase>pre-integration-test</phase>
                <goals><goal>start</goal></goals>
              </execution>
              <execution>
                <id>jetty-stop</id>
                <phase>post-integration-test</phase>
                <goals><goal>stop</goal></goals>
              </execution>
          
            </executions>
          </plugin>

        </plugins>

      </build>
    </profile>
  </profiles>
      
</project>
