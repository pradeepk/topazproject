<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>${pom.parent.artifactId}-server</artifactId>
  <packaging>jar</packaging>
  <name>Annotation-Admin Webservice Server</name>

  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-annotation-admin</artifactId>
    <version>0.1</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>${pom.parent.groupId}</groupId>
      <artifactId>${pom.parent.artifactId}-api</artifactId>
      <version>${pom.parent.version}</version>
    </dependency>
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis</artifactId>
      <version>1.2.1</version>
    </dependency>
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis-jaxrpc</artifactId>
      <version>1.2</version>
    </dependency>
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis-saaj</artifactId>
      <version>1.2.1</version>
    </dependency>
    <dependency>
      <groupId>xacml</groupId>
      <artifactId>sunxacml</artifactId>
      <version>1.2</version>
    </dependency>
    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>xacml-extensions</artifactId>
      <version>0.5-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>CopyServiceImplementation</id>
            <phase>generate-sources</phase>
            <configuration>
              <tasks>
                <copy todir="${project.build.directory}/generated-sources" >
                  <fileset dir="src/main/axis" includes="**/*.java"/>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>CopyServiceDeploymentDescriptors</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <copy todir="${project.build.directory}/classes" flatten="true">
                  <fileset dir="${project.build.directory}/generated-sources" includes="**/*.wsdd"/>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals><goal>wsdl2java</goal></goals>
            <configuration>
              <sourceDependencies>
                <sourceDependency>${pom.parent.groupId}:${pom.parent.artifactId}-api:${pom.parent.version}:/${wsdl.filename}</sourceDependency>
              </sourceDependencies>
              <serverSide>true</serverSide>
              <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
