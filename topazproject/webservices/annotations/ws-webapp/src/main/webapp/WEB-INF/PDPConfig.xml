<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://sunxacml.sourceforge.net/schema/config-0.3"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  defaultPDP="pdp" defaultAttributeFactory="attr"
  defaultCombiningAlgFactory="comb" defaultFunctionFactory="func">
  <pdp name="pdp">
    <attributeFinderModule class="com.sun.xacml.finder.impl.CurrentEnvModule"/>
    <attributeFinderModule
      class="org.topazproject.xacml.ServletEndpointContextAttributeFinderModule"/>
    <policyFinderModule class="org.topazproject.xacml.ResourcePolicyModule">
      <list>
        <string>policy/createAnnotation.xml</string>
        <string>policy/deleteAnnotation.xml</string>
        <string>policy/getAnnotationInfo.xml</string>
        <string>policy/setAnnotationInfo.xml</string>
        <string>policy/listAnnotations.xml</string>
        <string>policy/listAnnotationsInState.xml</string>
        <string>policy/setAnnotationState.xml</string>
        <string>policy/replies.xml</string>
      </list>
    </policyFinderModule>
  </pdp>
  <attributeFactory name="attr" useStandardDatatypes="true"/>
  <combiningAlgFactory name="comb" useStandardAlgorithms="true"/>
  <functionFactory name="func" useStandardFunctions="true">
    <condition>
      <function class="org.topazproject.xacml.cond.ItqlQueryFunction"/>
    </condition>
  </functionFactory>
</config>
