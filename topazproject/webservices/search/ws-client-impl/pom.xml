<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <artifactId>${pom.parent.artifactId}-client-impl</artifactId>
  <packaging>jar</packaging>
  <version>0.5-SNAPSHOT</version>
  <name>Fedoragsearch client API</name>
  
  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-search</artifactId>
    <version>0.5-SNAPSHOT</version>
  </parent>
  
  <dependencies>
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis</artifactId>
      <version>1.2.1</version>
    </dependency>
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis-jaxrpc</artifactId>
      <version>1.3</version>
    </dependency>

    <dependency>
      <groupId>${pom.parent.groupId}</groupId>
      <artifactId>${pom.parent.artifactId}-webapp</artifactId>
      <type>war</type>
      <version>${pom.parent.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>    
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>1.2</version>
      <scope>test</scope>
    </dependency>
    
    <!-- Only needed for it-helper profile, but no way to turn it on only for profile -->
    <dependency>
      <groupId>org.topazproject.ws</groupId>
      <artifactId>ws-articles-client-impl</artifactId>
      <version>0.5-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.topazproject.ws</groupId>
      <artifactId>ws-articles-webapp</artifactId>
      <type>war</type>
      <version>0.5-SNAPSHOT</version>
      <scope>provided</scope>
    </dependency>

    <!-- Probably needs to be somewhere else -->
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis</artifactId>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <version>1.0</version>

        <executions>
          
          <execution>
            <id>generate-fedoragsearch-client</id>
            <phase>generate-sources</phase>
            <goals><goal>wsdl2java</goal></goals>
            <configuration>
              <packageSpace>org.topazproject.fedoragsearch.service</packageSpace>
            </configuration>
          </execution>

        </executions>
      </plugin>
      
    </plugins>
  </build>

  
  <!-- Profiles Section: Define custom profiles here -->
  
  <profiles>
    <!-- it-helper: Integration-test helper - Turn on integration testing within modules -->
    <profile>
      <id>it-helper</id>
      
      <build>
        <plugins>

          <!-- deploy for integration testing -->
          <!-- This just steals the configuration from our super-pom -->
          <plugin>
            <groupId>org.topazproject.patch.cargo</groupId>
            <artifactId>cargo-maven2-plugin</artifactId>
            <configuration>
              <configuration>
                <deployables>
                  <deployable>
                    <groupId>${pom.parent.groupId}</groupId>
                    <artifactId>${pom.parent.artifactId}-webapp</artifactId>
                    <type>war</type>
                  </deployable>
                  <!-- We need the articles, users and preferences webapps too -->
                  <deployable>
                    <groupId>org.topazproject.ws</groupId>
                    <artifactId>ws-articles-webapp</artifactId>
                    <type>war</type>
                  </deployable>
                </deployables>
              </configuration>
            </configuration>
            <executions>
              <execution>
                <id>jetty-start</id>
              </execution>
            </executions>
          </plugin>

        </plugins>
      </build>
    </profile>
    
  </profiles>
</project>
