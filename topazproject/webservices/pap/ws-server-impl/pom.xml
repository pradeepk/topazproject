<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>${pom.parent.artifactId}-server</artifactId>
  <packaging>jar</packaging>
  <name>Pap Webservice Server</name>

  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-pap</artifactId>
    <version>0.5-rc5</version>
  </parent>

  <licenses>
    <license>
      <name>Educational Community License version 1.0</name>
      <url>http://opensource.org/licenses/ecl1.php</url>
    </license>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>${pom.parent.groupId}</groupId>
      <artifactId>${pom.parent.artifactId}-impl</artifactId>
      <version>${pom.parent.version}</version>
    </dependency>
    <dependency>
      <groupId>org.topazproject.ws</groupId>
      <artifactId>ws-common-server</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-server-binding</id>
            <phase>generate-sources</phase>
            <goals><goal>wsdl2java</goal></goals>
            <configuration>
              <sourceDependencies>
                <sourceDependency>${pom.parent.groupId}:${pom.parent.artifactId}-api:${pom.parent.version}:/${wsdl.filename}</sourceDependency>
              </sourceDependencies>
              <serverSide>true</serverSide>
              <deployScope>application</deployScope>
              <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>CopyServiceDeploymentDescriptors</id>
            <phase>process-sources</phase>
            <configuration>
              <tasks>
                <copy todir="${project.build.directory}/classes" flatten="true">
                  <fileset dir="${project.build.directory}/generated-sources" includes="**/*.wsdd" />
                </copy>
                <delete dir="${project.build.directory}/generated-sources" />
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
