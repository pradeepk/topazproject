<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>${pom.parent.artifactId}-api</artifactId>
  <packaging>jar</packaging>
  <name>Pap API</name>

  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-pap</artifactId>
    <version>0.5-rc1</version>
  </parent>

  <licenses>
    <license>
      <name>Educational Community License version 1.0</name>
      <url>http://opensource.org/licenses/ecl1.php</url>
    </license>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>org.topazproject.ws</groupId>
      <artifactId>ws-users-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.topazproject.ws</groupId>
      <artifactId>ws-common-api</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.topazproject.patch.plugin</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-wsdl-prof</id>
            <phase>process-classes</phase>
            <goals>
              <goal>java2wsdl</goal>
            </goals>
            <configuration>
              <implementationClassName>ProfilesServiceImplementation</implementationClassName>
              <filename>${wsdl.filename}</filename>
              <all>true</all>
              <namespace>pap.ws.topazproject.org</namespace>
              <servicePortName>ProfilesServicePort</servicePortName>
              <location>http://localhost/service-location</location>
              <classesDirectory>${project.build.directory}/classes</classesDirectory>
              <classOfPortType>org.topazproject.ws.pap.Profiles</classOfPortType>
              <outputDirectory>${project.build.directory}/classes</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>generate-wsdl-pref</id>
            <phase>process-classes</phase>
            <goals>
              <goal>java2wsdl</goal>
            </goals>
            <configuration>
              <implementationClassName>PreferencesServiceImplementation</implementationClassName>
              <input>${project.build.directory}/classes/${wsdl.filename}</input>
              <filename>${wsdl.filename}</filename>
              <all>true</all>
              <namespace>pap.ws.topazproject.org</namespace>
              <servicePortName>PreferencesServicePort</servicePortName>
              <location>http://localhost/service-location</location>
              <classesDirectory>${project.build.directory}/classes</classesDirectory>
              <classOfPortType>org.topazproject.ws.pap.Preferences</classOfPortType>
              <outputDirectory>${project.build.directory}/classes</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin> 
    </plugins>
  </build>
</project>
