<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <artifactId>${pom.parent.artifactId}-core</artifactId>
  <packaging>jar</packaging>
  <name>Journal Admin Core</name>

  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-journal-admin</artifactId>
    <version>0.5-SNAPSHOT</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>topaz-common</artifactId>
      <version>0.5-SNAPSHOT</version>
    </dependency>
  </dependencies>
  
  <build>
    <plugins>
      <plugin>
<!--        <groupId>org.codehaus.mojo</groupId> -->
        <groupId>org.topazproject.patch.plugin</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <version>1.0</version>
        <executions>
          <execution>
            <id>generate-wsdl</id>
            <phase>process-classes</phase>
            <goals>
              <goal>java2wsdl</goal>
            </goals>
            <configuration>
              <implementationClassName>JournalServiceImplementation</implementationClassName>
              <filename>${wsdl.filename}</filename>
              <all>true</all>
              <namespace>service.admin.ws.topazproject.org</namespace>
              <servicePortName>JournalServicePort</servicePortName>
              <location>http://localhost/service-location</location>
              <classesDirectory>${project.build.directory}/classes</classesDirectory>
              <classOfPortType>org.topazproject.ws.admin.Journal</classOfPortType>
              <outputDirectory>${project.build.directory}/classes</outputDirectory>
              <classpath>
                <classes>${settings.localRepository}/org/topazproject/topaz-common/0.5-SNAPSHOT/topaz-common-0.5-SNAPSHOT.jar</classes>
              </classpath>
            </configuration>
          </execution>
        </executions>
      </plugin> 
    </plugins>
  </build>
</project>
