<project>
  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-journal-admin</artifactId>
    <version>0.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.topazproject.ws</groupId>
  <artifactId>ws-journal-admin-server</artifactId>
  <version>0.1</version>
  <packaging>jar</packaging>
  <name>Journal-Admin Webservice Server</name>
  <dependencies>
    <dependency>
      <groupId>org.topazproject.ws</groupId>
      <artifactId>ws-journal-admin-api</artifactId>
      <version>0.1</version>
    </dependency>
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis</artifactId>
      <version>1.2.1</version>
    </dependency>
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis-jaxrpc</artifactId>
      <version>1.2</version>
    </dependency>
    <dependency>
      <groupId>axis</groupId>
      <artifactId>axis-saaj</artifactId>
      <version>1.2.1</version>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>CopyServiceImplementation</id>
            <phase>generate-sources</phase>
            <configuration>
              <tasks>
                <copy todir="${project.build.directory}/generated-sources" >
                  <fileset dir="src/main/axis" includes="**/*.java"/>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
          <execution>
            <id>CopyServiceDeploymentDescriptors</id>
            <phase>compile</phase>
            <configuration>
              <tasks>
                <copy todir="${project.build.directory}/classes" flatten="true">
                  <fileset dir="${project.build.directory}/generated-sources" includes="**/*.wsdd"/>
                </copy>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <version>0.1-SNAPSHOT</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals><goal>wsdl2java</goal></goals>
            <configuration>
              <sourceDependencies>
                <sourceDependency>org.topazproject.ws:ws-journal-admin-api:0.1:/journal-admin-service.wsdl</sourceDependency>
              </sourceDependencies>
              <serverSide>true</serverSide>
              <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
