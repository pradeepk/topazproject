<?xml version="1.0" encoding="UTF-8"?>
<project>
  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-journal-admin</artifactId>
    <version>0.1</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.topazproject.ws</groupId>
  <artifactId>ws-journal-admin-api</artifactId>
  <version>0.1</version>
  <packaging>jar</packaging>
  <name>Journal Admin API</name>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <version>0.1-SNAPSHOT</version>
        <executions>
          <execution>
            <id>journal-admin</id>
            <phase>process-classes</phase>
            <goals>
              <goal>java2wsdl</goal>
            </goals>
            <configuration>
              <implementationClassName>JournalServiceImplementation</implementationClassName>
              <filename>journal-admin-service.wsdl</filename>
              <all>true</all>
              <namespace>service.admin.ws.topazproject.org</namespace>
              <servicePortName>JournalServicePort</servicePortName>
              <location>http://localhost/service-location</location>
              <classesDirectory>${project.build.directory}/classes</classesDirectory>
              <classOfPortType>org.topazproject.ws.admin.Journal</classOfPortType>
            </configuration>
          </execution>
        </executions>
      </plugin> 
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-classes</phase>
            <configuration>
              <tasks>
                <copy todir="${project.build.directory}/classes" 
                file="${project.build.directory}/generated-sources/axistools/java2wsdl/journal-admin-service.wsdl"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
