<project>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>${pom.parent.artifactId}-api</artifactId>
  <packaging>jar</packaging>
  <name>Users API</name>

  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-users</artifactId>
    <version>0.5-SNAPSHOT</version>
  </parent>

  <licenses>
    <license>
      <name>Educational Community License version 1.0</name>
      <url>http://opensource.org/licenses/ecl1.php</url>
    </license>
  </licenses>

  <dependencies>
    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>topaz-common</artifactId>
      <version>0.5-SNAPSHOT</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
<!--        <groupId>org.codehaus.mojo</groupId> -->
        <groupId>org.topazproject.patch.plugin</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <version>1.1-SNAPSHOT</version>
        <executions>
          <execution>
            <id>generate-wsdl-users</id>
            <phase>process-classes</phase>
            <goals>
              <goal>java2wsdl</goal>
            </goals>
            <configuration>
              <implementationClassName>UserAccountsServiceImplementation</implementationClassName>
              <filename>${wsdl.filename}</filename>
              <all>true</all>
              <namespace>users.ws.topazproject.org</namespace>
              <servicePortName>UserAccountsServicePort</servicePortName>
              <location>http://localhost/service-location</location>
              <classesDirectory>${project.build.directory}/classes</classesDirectory>
              <classOfPortType>org.topazproject.ws.users.UserAccounts</classOfPortType>
            </configuration>
          </execution>
          <execution>
            <id>generate-wsdl-roles</id>
            <phase>process-classes</phase>
            <goals>
              <goal>java2wsdl</goal>
            </goals>
            <configuration>
              <implementationClassName>UserRolesServiceImplementation</implementationClassName>
              <input>${project.build.directory}/generated-sources/axistools/java2wsdl/${wsdl.filename}</input>
              <filename>${wsdl.filename}</filename>
              <all>true</all>
              <namespace>users.ws.topazproject.org</namespace>
              <servicePortName>UserRolesServicePort</servicePortName>
              <location>http://localhost/service-location</location>
              <classesDirectory>${project.build.directory}/classes</classesDirectory>
              <classOfPortType>org.topazproject.ws.users.UserRoles</classOfPortType>
            </configuration>
          </execution>
        </executions>
      </plugin> 
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-classes</phase>
            <configuration>
              <tasks>
                <copy todir="${project.build.directory}/classes" 
                  file="${project.build.directory}/generated-sources/axistools/java2wsdl/${wsdl.filename}"/>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
