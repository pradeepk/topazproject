<assembly>
  <id>src</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
    <format>tar.bz2</format>
  </formats>
  <fileSets>
    <fileSet>
      <includes>
        <include>README*</include>
        <include>LICENSE*</include>
        <include>NOTICE*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>..</directory>
      <outputDirectory>src</outputDirectory>
      <includes>
        <include>**/src/**</include>
        <include>**/pom.xml</include>
      </includes>
      <excludes>
        <exclude>**/fedora/**</exclude>
        <exclude>**/plos/**</exclude>
        <exclude>**/build/**</exclude>
        <exclude>**/conf-helper/**</exclude>
        <exclude>**/filter-resolver/**</exclude>
        <exclude>**/mulgara-service/**</exclude>
        <exclude>**/jdk2log4j-proxy/**</exclude>
        <exclude>**/packages/**</exclude>
        <exclude>**/distribution/**</exclude>
        <exclude>**/docs/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>
