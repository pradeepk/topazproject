<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.topazproject</groupId>
  <artifactId>ecqs</artifactId>
  <packaging>jar</packaging>
  <version>2.0.6-1-t1</version>
  <name>ESUP CAS Quick Start</name>

  <parent>
    <groupId>org.topazproject</groupId>
    <artifactId>topazproject-repackage</artifactId>
    <version>0.5-rc1</version>
  </parent>

  <build>
    <plugins>
      <plugin>
        <groupId>org.topazproject.plugins</groupId>
        <artifactId>ant-tasks</artifactId>
        <configuration>
          <DEST_DIR>${project.build.directory}/classes</DEST_DIR> 
          <SRC_ZIP>${settings.localRepository}/org/esup-portail/esup-cas-quick-start/2.0.6-1/esup-cas-quick-start-2.0.6-1.zip</SRC_ZIP>
          <ROOT>esup-cas-quick-start-2.0.6-1</ROOT>
          <CAS_SERVER_LIB_PATH>custom/cas-server-patch/web/WEB-INF/lib</CAS_SERVER_LIB_PATH>
          <CAS_MOD>${settings.localRepository}/org/plosone/plosone-cas-mod/${pom.parent.version}/plosone-cas-mod-${pom.parent.version}.jar</CAS_MOD>
          <PASSWORD_MOD>${settings.localRepository}/org/plos/plos-registration-password-service/${pom.parent.version}/plos-registration-password-service-${pom.parent.version}.jar</PASSWORD_MOD>
          <DATABASE_DRIVER>${settings.localRepository}/postgresql/postgresql/8.1-407.jdbc3/postgresql-8.1-407.jdbc3.jar</DATABASE_DRIVER>
          <COMMONS_LOGGING>${settings.localRepository}/commons-logging/commons-logging/1.0.4/commons-logging-1.0.4.jar</COMMONS_LOGGING>
          <COMMONS_DBCP>${settings.localRepository}/commons-dbcp/commons-dbcp/1.2.1/commons-dbcp-1.2.1.jar</COMMONS_DBCP>
          <COMMONS_POOL>${settings.localRepository}/commons-pool/commons-pool/1.3/commons-pool-1.3.jar</COMMONS_POOL>
          <COMMONS_COLLECTIONS>${settings.localRepository}/commons-collections/commons-collections/2.1/commons-collections-2.1.jar</COMMONS_COLLECTIONS>
        </configuration>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>ecqs-package</goal>
            </goals>
          </execution>
        </executions>
        <dependencies>
          <dependency>
            <groupId>org.esup-portail</groupId>
            <artifactId>esup-cas-quick-start</artifactId>
            <version>2.0.6-1</version>
            <type>zip</type>
          </dependency>
          <dependency>
            <groupId>org.plosone</groupId>
            <artifactId>plosone-cas-mod</artifactId>
            <version>${pom.parent.version}</version>
          </dependency>
          <dependency>
            <groupId>org.plos</groupId>
            <artifactId>plos-registration-password-service</artifactId>
            <version>${pom.parent.version}</version>
          </dependency>
          <dependency>
            <groupId>postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>8.1-407.jdbc3</version>
          </dependency>
          <dependency>
            <groupId>commons-logging</groupId>
            <artifactId>commons-logging</artifactId>
            <version>1.0.4</version>
          </dependency>
          <dependency>
            <groupId>commons-dbcp</groupId>
            <artifactId>commons-dbcp</artifactId>
            <version>1.2.1</version>
          </dependency>
          <dependency>
            <groupId>commons-pool</groupId>
            <artifactId>commons-pool</artifactId>
            <version>1.3</version>
          </dependency>
        </dependencies>
      </plugin>
    </plugins>
  </build>

</project>