<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>info.anumana</groupId>
  <artifactId>the-whole-shebang</artifactId>
  <version>0.5-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>All Plos and Topaz stuff</name>

  <repositories>
    <repository>
      <id>codehaus</id>
      <name>Codehaus Repo</name>
      <url>http://dist.codehaus.org</url>
      <layout>legacy</layout>
    </repository>
    <repository>
      <id>central</id>
      <name>Maven 2 Repository on ibibio</name>
      <url>http://www.ibiblio.org/maven2</url>
    </repository>
    <repository>
      <id>topaz</id>
      <name>Maven 2 Repository for Topaz</name>
      <url>http://gandalf/maven2</url>
    </repository>
  </repositories>

  <scm>
    <developerConnection>scm:svn:http://gandalf/svn/head/</developerConnection>
    <connection>scm:svn:http://gandalf/svn/head/</connection>
    <url>http://gandalf/svn/</url>
  </scm>

  <distributionManagement>
    <repository>
      <id>topaz</id>
      <url>http://gandalf/maven2/</url>
    </repository>
  </distributionManagement>

  <modules>
    <module>ant-task-plugins</module>
    <module>re-package</module>
    <module>topaz</module>
    <module>filter-resolver</module>
  </modules>
</project>
