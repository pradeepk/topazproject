<?xml version="1.0" encoding="UTF-8"?>
<Policy xmlns="urn:oasis:names:tc:xacml:1.0:policy"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  PolicyId="deny-disabled"
  RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:first-applicable">

  <Description>
    Deny all access to users with disabled accounts. 
  </Description>

  <Target>
    <AnyTarget/>
  </Target>

  <Rule RuleId="deny-disabled" Effect="Deny">
    <Target>
      <AnyTarget/>
    </Target>

    <Condition FunctionId="urn:oasis:names:tc:xacml:1.0:function:integer-greater-than">
      <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:integer-one-and-only">
        <SubjectAttributeDesignator DataType="http://www.w3.org/2001/XMLSchema#integer"
          AttributeId="org.topazproject.account-state"/>   
      </Apply>
      <AttributeValue DataType="http://www.w3.org/2001/XMLSchema#integer">0</AttributeValue>  
    </Condition>
  </Rule>

  <Obligations>
    <Obligation ObligationId="log" FulfillOn="Deny">
      <AttributeAssignment AttributeId="policy" 
        DataType="http://www.w3.org/2001/XMLSchema#string">deny-disabled</AttributeAssignment>
    </Obligation>
  </Obligations>

</Policy>

