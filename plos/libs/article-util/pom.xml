            <artifactId>exec-maven-plugin</artifactId>
            <version>1.0.2</version>
            <configuration>
              <mainClass>org.plos.article.util.Test</mainClass>
              <arguments>
                <argument>${args}</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>