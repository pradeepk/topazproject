<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  
  <modelVersion>4.0.0</modelVersion>
  <artifactId>mulgara-driver</artifactId>
  <packaging>jar</packaging>
  <version>0.9.2</version>
  <name>Ambra Mulgara RMI driver</name>
  <description>A Mulgara RMI client library with log4j classes stripped.</description>

  <parent>
    <groupId>org.topazproject</groupId>
    <artifactId>ambra-libs</artifactId>
    <version>0.9.2</version>
  </parent>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.0</version>
        <executions>
          <execution>
            <id>unpack-mulgara-driver</id>
            <phase>compile</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.mulgara</groupId>
                  <artifactId>driver</artifactId>
                  <outputDirectory>${project.build.directory}/classes</outputDirectory>
                </artifactItem>
              </artifactItems>
              <excludes>org/apache/log4j/**</excludes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
