    </action>

    <action name="getRatingsForUser" class="org.topazproject.ambra.rating.action.RateAction" method="retrieveRatingsForUser">
      <result name="input" type="json"/>
      <result name="success" type="json"/>
      <result name="error" type="json"/>
    </action>
  </package>

