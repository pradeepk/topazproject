<?xml version="1.0"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%p %d{mm:ss} %c{1}> %m%n"/>
    </layout>
  </appender>

  <logger name="org.mulgara.store.xa.FreeList">
    <level value="warn" />
  </logger>

  <logger name="org.mulgara.store.tuples.UnorderedProjection">
    <level value="warn" />
  </logger>

  <logger name="net.sf.ehcache.distribution.MulticastKeepaliveHeartbeatSender">
    <level value="warn" />
  </logger>

  <logger name="org.mulgara">
    <level value="info" />
  </logger>

  <root>
    <priority value ="info" />
    <appender-ref ref="console" />
  </root>
</log4j:configuration>
