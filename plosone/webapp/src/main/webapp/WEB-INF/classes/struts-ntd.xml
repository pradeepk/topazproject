<struts>

  <package name="default-ntd" extends="default" namespace="/journals/ntd">

    <action name="home" class="org.plos.action.HomePageAction">
      <result name="success" type="plosOneFreemarker">
        <param name="templateFile">/journals/ntd/index.ftl</param>
      </result>
    </action>

  </package>

  <package name="article-ntd" extends="default-ntd" namespace="/journals/ntd/article">
    <action name="browseIssue" class="org.plos.article.action.BrowseArticlesAction">
      <result name="success" type="plosOneFreemarker">
        <param name="templateFile">/journals/ntd/article/browseIssue.ftl</param>
      </result>
    </action>

    <action name="browseVolume" class="org.plos.article.action.BrowseArticlesAction">
      <result name="success" type="plosOneFreemarker">
        <param name="templateFile">/journals/ntd/article/browseVolume.ftl</param>
      </result>
    </action>
  </package>

  <package name="static-ntd" extends="default-ntd" namespace="/journals/ntd/static">
    <action name="browse" class="org.plos.action.NoOpAction">
      <result name="success" type="plosOneFreemarker">
        <param name="templateFile">/journals/ntd/static/browse.ftl</param>
      </result>
    </action>
  </package>
</struts>
