<?xml version="1.0" encoding="UTF-8"?>
<beans default-autowire="byName"
       xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

  <import resource="nonWebApplicationContext.xml"/>

  <!-- creating all actions with the right injections -->
  <bean id="fetchArticleAction" class="org.plos.article.action.FetchArticleAction">
    <property name="fetchArticleService" ref="fetchArticleService"/>
  </bean>

  <bean id="createAnnotation" class="org.plos.annotation.action.CreateAnnotationAction"/>

  <bean id="deleteAnnotation" class="org.plos.annotation.action.DeleteAnnotationAction"/>

  <bean id="listAnnotation" class="org.plos.annotation.action.ListAnnotationAction"/>

  <bean id="getAnnotation" class="org.plos.annotation.action.GetAnnotationAction"/>

  <bean id="createReplyAction" class="org.plos.annotation.action.CreateReplyAction"/>

  <bean id="bodyFetchAction" class="org.plos.annotation.action.BodyFetchAction"/>

  <bean id="listReplyAction" class="org.plos.annotation.action.ListReplyAction"/>

  <bean id="deleteReplyAction" class="org.plos.annotation.action.DeleteReplyAction"/>

  <bean id="getReply" class="org.plos.annotation.action.GetReplyAction"/>
  
  <bean id="createUserAction" class="org.plos.user.action.CreateUserAction"/>

  <bean id="displayUserAction" class="org.plos.user.action.DisplayUserAction"/>

</beans>