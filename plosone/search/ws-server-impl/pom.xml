<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <artifactId>${pom.parent.artifactId}-server</artifactId>
  <packaging>jar</packaging>
  <name>Search Webservice Server</name>

  <parent>
    <groupId>org.topazproject.ws</groupId>
    <artifactId>ws-search</artifactId>
    <version>0.8.1_rc1</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>info.fedora</groupId>
      <artifactId>fedoragsearch-server</artifactId>
      <version>2.1.1-t0.8.1_rc1</version>
    </dependency>
    <dependency>
      <groupId>org.topazproject.ws</groupId>
      <artifactId>topaz-lucene-impl</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <!-- torture maven to get .wsdd files -->
      <plugin>
        <groupId>org.topazproject.patch.plugin</groupId>
        <artifactId>axistools-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-server-binding</id>
            <phase>generate-sources</phase>
            <goals><goal>wsdl2java</goal></goals>
            <configuration>
              <sourceDependencies>
                <sourceDependency>info.fedora:fedoragsearch-server:2.1.1-t0.8.1_rc1:/fedoragsearch-service.wsdl</sourceDependency>
              </sourceDependencies>
              <!--
              <implementationClassName>org.topazproject.ws.search.SearchServicePortSoapBindingImpl</implementationClassName>
              -->
              <packageSpace>org.topazproject.ws.search</packageSpace>
              <serverSide>true</serverSide>
              <deployScope>application</deployScope>
              <outputDirectory>${project.build.directory}/generated-sources</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>CopyServiceDeploymentDescriptors</id>
            <phase>process-sources</phase>
            <configuration>
              <tasks>
                <copy todir="${project.build.directory}/classes" flatten="true">
                  <fileset dir="${project.build.directory}/generated-sources" includes="**/*.wsdd" />
                </copy>
                <delete dir="${project.build.directory}/generated-sources" />
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
