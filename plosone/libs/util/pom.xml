<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>plosone-util</artifactId>
  <packaging>jar</packaging>
  <name>PLOSOne Utilities</name>

  <parent>
    <groupId>org.plosone</groupId>
    <artifactId>plosone</artifactId>
    <version>0.8-rc2</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>org.plosone</groupId>
      <artifactId>otm-models</artifactId>
      <version>${version}</version>
    </dependency>
    <dependency>
      <groupId>org.plosone</groupId>
      <artifactId>conf-helper</artifactId>
      <version>${version}</version>
    </dependency>
    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>otm-extras</artifactId>
    </dependency>
    <dependency>
      <groupId>org.topazproject</groupId>
      <artifactId>entity-resolver</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-lang</groupId>
      <artifactId>commons-lang</artifactId>
    </dependency>
    <dependency>
      <groupId>groovy</groupId>
      <artifactId>groovy-all</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo.groovy</groupId>
        <artifactId>groovy-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>compile</id>
            <goals><goal>compile</goal></goals>
          </execution>
          <!--
          <execution>
            <id>testCompile</id>
            <goals><goal>testCompile</goal></goals>
          </execution>
          -->
        </executions>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>migration</id>
      <build>
        <defaultGoal>exec:java</defaultGoal>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <version>1.0.2</version>
            <configuration>
              <mainClass>migration</mainClass>
              <arguments>
                <argument>${args}</argument>
              </arguments>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
