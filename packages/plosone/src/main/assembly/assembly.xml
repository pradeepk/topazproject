<assembly>
  <id>tomcat</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <files>
    <!-- Copy over webapp specific server.xml file -->
    <file>
      <source>src/main/resources/server.xml</source>
      <outputDirectory>conf</outputDirectory>
    </file>
    <!-- Copy over webassp specific log4j.xml file -->
    <file>
      <source>src/main/resources/log4j.xml</source>
      <outputDirectory>common/classes</outputDirectory>
    </file>
  </files>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/webapps/ROOT</outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <unpack>true</unpack>
      <includes>
        <include>*plos*:war</include>
      </includes>
      <excludes>
	<exclude>*doi*:war</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/webapps/</outputDirectory>
      <outputFileNameMapping>${artifactId}</outputFileNameMapping>
      <unpack>true</unpack>
      <includes>
        <include>*doi*:war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <unpack>true</unpack>
      <includes>
        <include>org.topazproject.packages:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
