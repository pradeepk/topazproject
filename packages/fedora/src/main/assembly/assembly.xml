<assembly>
  <id>tomcat</id>
  <formats>
    <format>dir</format>
    <format>tar.gz</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <files>
    <!-- Copy over webapp specific server.xml file -->
    <file>
      <source>src/main/resources/server.xml</source>
      <outputDirectory>conf</outputDirectory>
    </file>
    <file>
      <source>src/main/resources/fedora.fcfg</source>
      <outputDirectory>fedora_home/server/config</outputDirectory>
    </file>
    <file>
      <source>src/main/resources/log4j.properties</source>
      <!-- Bug in assembly plugin won't let this go where it should go - postinstall must move -->
      <!--
      <outputDirectory>fedora_home/server/config</outputDirectory>
      -->
      <outputDirectory>common/classes</outputDirectory>
    </file>
  </files>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <unpack>true</unpack>
      <includes>
        <include>org.topazproject.packages:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/common/lib/</outputDirectory>
      <outputFileNameMapping>${artifactId}-${version}.${extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <includes>
        <include>*:jar</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/webapps/</outputDirectory>
      <outputFileNameMapping>${artifactId}</outputFileNameMapping>
      <unpack>true</unpack>
      <includes>
        <include>*:war</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <outputDirectory>/fedora_home/</outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <unpack>true</unpack>
      <includes>
        <include>info.fedora:fedorahome</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
