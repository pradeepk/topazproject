<assembly>
  <id>fedora</id>
  <formats>
    <format>dir</format>
    <!-- <format>tar.gz</format> -->
  </formats>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/</outputDirectory>
      <outputFileNameMapping></outputFileNameMapping>
      <unpack>true</unpack>
      <useProjectArtifact>false</useProjectArtifact>
      <includes>
        <include>org.topazproject:fedora</include>
      </includes>
      <excludes>
        <exclude>info.fedora:*</exclude>
      </excludes>
      <unpackOptions>
        <excludes>
          <exclude>META-INF/**</exclude>
          <exclude>fedora-2.1.1/client/demo/**</exclude>
          <exclude>fedora-2.1.1/server/jakarta-tomcat-5.0.28/webapps/fop/**</exclude>
          <exclude>fedora-2.1.1/server/jakarta-tomcat-5.0.28/webapps/imagemanip/**</exclude>
          <exclude>fedora-2.1.1/server/jakarta-tomcat-5.0.28/webapps/saxon/**</exclude>
          <exclude>fedora-2.1.1/server/jakarta-tomcat-5.0.28/webapps/userdocs/**</exclude>
          <exclude>fedora-2.1.1/server/userdocs/**</exclude>
        </excludes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>
