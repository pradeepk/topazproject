#!/bin/bash
# $HeadURL::                                                                   $
# $Id$
#
# fedora        
#
# chkconfig: 345 93 13
# description:  Start up the fedora app.

# Validate fedora.fcfg
FEDORA_FCFG=/usr/local/topaz/fedora/server/config/fedora.fcfg
[ -e $FEDORA_FCFG ] && ! xmllint --noout $FEDORA_FCFG && exit 1
LOG_XML=/usr/local/topaz/fedora/server/jakarta-tomcat-5.0.28/common/classes/log4j.xml
[ -e $LOG_XML ] && ! xmllint --noout $LOG_XML && exit 1

# WARN about XACML if IP not set - Just a warning to try and be helpful.
# It is possible all is okay (if for instance the IP was also put into the template)
# The template file is copied to the rule file after fedora is started for the first time
MYIP=`hostname -i`
XACML_DIR=/usr/local/topaz/fedora/data
RULE_TEMPLATE=/usr/local/topaz/fedora/server/fedora-internal-use/fedora-internal-use-repository-policies-approximating-2.0/deny-apim-if-not-localhost.xml
RULE_FILE=/usr/local/topaz/fedora/data/fedora-xacml-policies/repository-policies/default/deny-apim-if-not-localhost.xml
# See if the directory of xacml rules exists
if [ -e "$XACML_DIR" ]; then
  # See if the template and the actual rule in quesiton are different
  if cmp -s $RULE_TEMPLATE $RULE_FILE; then
    # They are the same, but see if singleboxinstall-script put our IP in there
    if ! grep -q "$MYIP" "$RULE_FILE"; then
      echo -e "WARNING: IP not added to XACML rule - $RULE_FILE\n"
    fi
  fi
else
  echo -e "WARNING: Don't forget to set IP in $RULE_FILE\n"
fi

# Chown keystore
TRUST_STORE=/etc/topaz/keystore.jks
[ -e "$TRUST_STORE" ] && chown topaz.topaz $TRUST_STORE

# Source function library.
. /etc/init.d/functions

# Read our configuration from sysconfig (a redhat convention)
[ -e /etc/sysconfig/topaz-common ] && . /etc/sysconfig/topaz-common
[ -e /etc/sysconfig/fedora ] && . /etc/sysconfig/fedora

# Start multicast for ecache
/usr/local/topaz/bin/multicast

# Try to set JAVA_HOME if not set
[ -z "$JAVA_HOME" ] && JAVA_HOME=`find /opt -maxdepth 1 -name 'jdk*' -a \! -type f | head -1`
export JAVA_HOME

# Verify that JAVA_HOME is set and exists
[ -z "$JAVA_HOME" ] && echo "JAVA_HOME must be set" && exit 1
[ ! -d "$JAVA_HOME" ] && echo "JAVA_HOME ($JAVA_HOME) invalid" && exit 1

FEDORA_HOME="/usr/local/topaz/fedora"
export FEDORA_HOME

FEDORA_SH="$FEDORA_HOME/server/bin/fedora.sh"
if [ ! -f "$FEDORA_SH" ] ; then
    echo "Fedora script not found: $FEDORA_SH"
    exit 1
fi

RETVAL=0

case "$1" in
    start)
        echo "Starting Fedora"
        /bin/su topaz -s /bin/sh -c "\"$FEDORA_SH\" start mysql \"$@\""
        RETVAL=$?
        [ $RETVAL -eq 0 ] && touch /var/lock/subsys/fedora
        ;;

    stop)
        echo "Stopping Fedora"
        /bin/su topaz -s /bin/sh -c "\"$FEDORA_SH\" stop mysql \"$@\""
        RETVAL=$?
        [ $RETVAL -eq 0 ] && rm -f /var/lock/subsys/fedora
        ;;

    restart)
        /bin/su topaz -s /bin/sh -c "\"$FEDORA_SH\" restart \"$@\""
        ;;

    status)
        /bin/su topaz -s /bin/sh -c "\"$FEDORA_SH\" status \"$@\""
        RETVAL=$?
        ;;

    *)
        echo $"Usage: $0 {start|stop|restart|status}"
        exit 1
        ;;
esac

exit $RETVAL
