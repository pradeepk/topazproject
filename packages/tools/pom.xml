<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.topazproject.packages</groupId>
  <artifactId>topaz-tools</artifactId>
  <packaging>pom</packaging>
  <version>0.5-SNAPSHOT</version>
  <name>Topaz Tools</name>

  <parent>
    <groupId>org.topazproject.packages</groupId>
    <artifactId>packages</artifactId>
    <version>0.5-SNAPSHOT</version>
  </parent>

  <dependencies>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/assembly.xml</descriptor>
          </descriptors>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.topazproject.plugins</groupId>
        <artifactId>ant-tasks</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>get-artifacts</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <dependencies>org.topazproject:topaz-tools-alerts:0.5-SNAPSHOT,org.topazproject:topaz-tools-articles:0.5-SNAPSHOT,org.topazproject:topaz-tools-rss:0.5-SNAPSHOT</dependencies>
        </configuration>
        <inherited>false</inherited>
      </plugin>

      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>2.0-alpha-3-SNAPSHOT</version>

        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>rpm</goal>
            </goals>
          </execution>
        </executions>

        <configuration>
          <release>SNAPSHOT</release>
          <copyright>Educational Community License version 1.0</copyright>
          <distribution>Topaz Repository Framework</distribution>
          <group>Applications/Internet</group>

          <mappings>
            <mapping>
              <directory>/usr/local/topaz</directory>
              <filemode>755</filemode>
              <username>topaz</username>
              <groupname>topaz</groupname>
            </mapping>
            <mapping>
              <directory>/var/log/topaz</directory>
              <filemode>755</filemode>
              <username>topaz</username>
              <groupname>topaz</groupname>
            </mapping>
            <mapping>
              <directory>/usr/local/topaz/bin</directory>
              <filemode>755</filemode>
              <username>topaz</username>
              <groupname>topaz</groupname>
              <sources>
                <source>
                  <location>src/main/resources/bin</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/usr/local/topaz/lib</directory>
              <filemode>755</filemode>
              <username>topaz</username>
              <groupname>topaz</groupname>
              <sources>
                <source>
                  <location>${project.build.directory}</location>
                  <includes>
                    <include>*.jar</include>
                  </includes>
                </source>
              </sources>
            </mapping>
          </mappings>

          <preinstallScript>src/main/scripts/preinstall</preinstallScript>
          <requires>
            <require>/bin/bash</require>
          </requires>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
