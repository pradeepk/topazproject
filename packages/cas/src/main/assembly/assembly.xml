<assembly>
  <id>tomcat</id>
  <formats>
    <format>tar.gz</format>
  </formats>

  <fileSets>
    <fileSet>
      <!--
      Stupid bug requires us to insert bug_workaround and we cannot seem to put
      this in the components.xml
      -->
      <directory>${project.bug_workaround.build.directory}/${tomcatFile}</directory>
      <outputDirectory>/</outputDirectory>
      <!-- Do not include default server.xml -->
      <excludes>
        <exclude>conf/server.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.bug_workaround.build.directory}/${ecqs-tomcat}/webapps/cas</directory>
      <outputDirectory>/webapps/cas</outputDirectory>
      <excludes>
        <exclude>WEB-INF/LoggerConf.xml</exclude>
        <exclude>WEB-INF/classes/log4j.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.bug_workaround.build.directory}/${ecqs-tomcat}/webapps/plos-registration</directory>
      <outputDirectory>/webapps/plos-registration</outputDirectory>
      <excludes>
        <exclude>WEB-INF/classes/log4j.xml</exclude>
      </excludes>
    </fileSet>
  </fileSets>

  <files>
    <!-- Copy over webapp specific server.xml file -->
    <file>
      <source>src/main/resources/server.xml</source>
      <outputDirectory>conf</outputDirectory>
      <destName>server.xml</destName>
    </file>
    <!-- Copy over webassp specific log4j.xml file -->
    <file>
      <source>src/main/resources/LoggerConf.xml</source>
      <outputDirectory>webapps/cas/WEB-INF</outputDirectory>
      <destName>LoggerConf.xml</destName>
    </file>
    <!-- Copy over webassp specific log4j.xml file -->
    <file>
      <source>src/main/resources/plos-registration-log4j.xml</source>
      <outputDirectory>webapps/plos-registration/WEB-INF/classes</outputDirectory>
      <destName>log4j.xml</destName>
    </file>
  </files>
</assembly>
