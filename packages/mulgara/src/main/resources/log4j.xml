<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
  <appender name="console" class="org.apache.log4j.ConsoleAppender">
    <param name="Target" value="System.out"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %-5p %c{1}&gt; %m%n"/>
    </layout>
  </appender>

  <appender name="rolling" class="org.apache.log4j.DailyRollingFileAppender">
    <param name="File" value="/var/log/topaz/mulgara.log"/>
    <param name="DatePattern" value="'.'yyyy-MM-dd"/>
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%d{ISO8601} %-5p %c{1}&gt; %m [%t %c]%n"/>
    </layout>
  </appender>

  <logger name="org.apache">
    <level value="warn" />
  </logger>

  <logger name="org.mulgara.store.xa.FreeList">
    <level value="warn" />
  </logger>

  <logger name="org.mulgara.store.tuples.UnorderedProjection">
    <level value="warn" />
  </logger>
  
  <logger name="net.sf.ehcache.distribution.MulticastKeepaliveHeartbeatSender">
    <level value="warn" />
  </logger>

  <!-- change to 'debug' for troubleshooting -->
  <logger name="org.topazproject.mulgara.ws">
    <level value="info" /> 
  </logger>

  <!-- andrae suggests this to log mulgara queries -->
  <!--category name="org.mulgara.resolver.DatabaseSession"> 
    <priority value="info"/>
  </category-->

  <!-- change to 'info' for troubleshooting -->
  <logger name="org.mulgara">
    <level value="warn" /> 
  </logger>

  <root>
    <priority value ="info" />
    <appender-ref ref="rolling" />
  </root>
</log4j:configuration>
