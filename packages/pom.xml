<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <groupId>org.topazproject.packages</groupId>
  <artifactId>packages</artifactId>
  <packaging>pom</packaging>
  <version>0.8.3</version>
  <name>packages</name>

  <parent>
    <groupId>org.topazproject</groupId>
    <artifactId>the-whole-shebang</artifactId>
    <version>0.8.3</version>
  </parent>

  <dependencies>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>
  </dependencies>

  <properties>
    <!-- 
    Name of the Tomcat file. Note: We are assuming that the name of the file
    will correspond to the directory name where the ant task will unzip the
    file to under {project.build.directory}
    -->
    <tomcatFile>apache-tomcat-5.5.25</tomcatFile>
    <tomcatLocation>http://www.apache.org/dist/tomcat/tomcat-5/v5.5.25/bin</tomcatLocation>
  </properties>

  <modules>
    <module>mulgara</module>
    <module>plosone</module>
    <module>cas</module>
    <module>fedora</module>
    <module>tools</module>
  </modules>

  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <executions>
            <execution>
              <phase>package</phase>
              <goals>
                <goal>attached</goal>
              </goals>
            </execution>
          </executions>
          <configuration>
            <tarLongFileMode>gnu</tarLongFileMode>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>

    <plugins>
      <plugin>
        <groupId>org.topazproject.plugins</groupId>
        <artifactId>ant-tasks</artifactId>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <goals>
              <goal>get-tomcat</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <tomcatFile>${tomcatFile}</tomcatFile>
          <tomcatLocation>${tomcatLocation}</tomcatLocation>
        </configuration>
        <inherited>false</inherited>
      </plugin>

      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
          <descriptors>
            <descriptor>src/main/assembly/common.xml</descriptor>
          </descriptors>
        </configuration>
        <inherited>false</inherited>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>rpm</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>buildnumber-maven-plugin</artifactId>
            <executions>
              <execution>
                <phase>validate</phase>
                <goals>
                  <goal>create</goal>
                </goals>
              </execution>
            </executions>
          </plugin>

          <plugin>
            <groupId>org.topazproject.plugins</groupId>
            <artifactId>properties-plugin</artifactId>
            <executions>
              <execution>
                <goals>
                  <goal>set-properties</goal>   <!-- set base-version property -->
                </goals>
              </execution>
            </executions>
          </plugin>
        </plugins>

        <pluginManagement>
          <plugins>
            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>rpm-maven-plugin</artifactId>
              <version>2.0-beta-1</version>
              <configuration> 
                <release>${topazproject.rpm.release}</release> 
                <copyright>Educational Community License version 1.0</copyright> 
                <distribution>Topaz Repository Framework</distribution> 
                <group>Applications/Internet</group> 
              </configuration>
            </plugin>

            <plugin>
              <groupId>org.codehaus.mojo</groupId>
              <artifactId>build-helper-maven-plugin</artifactId>
              <version>1.0</version>
              <executions>
                <execution>
                  <id>attach-rpm</id>
                  <phase>package</phase>
                  <goals>
                    <goal>attach-artifact</goal>
                  </goals>
                  <configuration>
                    <artifacts>
                      <artifact>
                        <file>${project.build.directory}/rpm/RPMS/noarch/${pom.artifactId}-${base-version}-${topazproject.rpm.release}.noarch.rpm</file>
                        <type>rpm</type>
                        <classifier>${topazproject.rpm.release}.noarch</classifier>
                      </artifact>
                    </artifacts>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </pluginManagement>
      </build>

      <properties>
        <topazproject.rpm.release>snap.${timestamp}</topazproject.rpm.release>
      </properties>
    </profile>

    <profile>
      <id>release</id>
      <properties>
        <topazproject.rpm.release>1</topazproject.rpm.release>
      </properties>
    </profile>
  </profiles>

</project>
